#include<bits/stdc++.h>
#define int long long
#define endl "\n"
using namespace std;
void ac(){
    int n,i,sum=0;  cin>>n;
    map<int, vector<int>>mp;
    while(n--){
        int a,b;    cin>>a>>b;
        mp[a].push_back(b);
    }
    for(auto p : mp){
        vector<int> v = p.second;
        sort(v.begin(), v.end(),greater<int>());
        for(i=0; i<min((int)v.size(), p.first); i++){
            sum+=v[i];
        }
    }
    cout<<sum<<"\n";
}
signed main(){
    int tc;     cin>>tc;
    while(tc--){
        ac();
    }
    return 0;
}
