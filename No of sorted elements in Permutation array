#include<bits/stdc++.h>
using namespace std;
void ac(){
    int n,i;    cin>>n;;
    int a[n+2],pos=1,ans=0;
    for(i=1; i<=n; i++){
        cin>>a[i];
        if(a[i]==pos){
            pos++;
            ans++;
        }
    }
    cout<<ans<<endl;
}
signed main(){
    int tc;     cin>>tc;
    while(tc--){
        ac();
    }
    return 0;
}
